<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.tukorea.free.mapper.AlgorithmPostMapper">
    <insert id="insert">
        insert into AlgorithmBoard (title, description, language_id, user_id)
        values (#{title}, #{description}, #{languageId}, #{userId})
    </insert>

    <select id="selectById"
            resultType="org.tukorea.free.domain.PostVO">

	<![CDATA[
        select *
        from AlgorithmBoard
        where id = #{id}
        ]]>
	</select>

    <select id="selectAll"
            resultType="org.tukorea.free.domain.PostVO">

	<![CDATA[
        select *
        from AlgorithmBoard
        ]]>
	</select>

    <update id="update">
        update AlgorithmBoard
        set title=#{title},
            description = #{description},
            language_id=#{languageId}
        where id = #{id}
    </update>

    <delete id="delete">
        delete
        from AlgorithmBoard
        where id = #{id}
    </delete>


</mapper>